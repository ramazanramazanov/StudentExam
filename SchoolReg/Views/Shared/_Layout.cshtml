<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light sidebar" style="width: 250px; height: 100vh;">
            <div class="navbar navbar-light">
                <a class="navbar-brand" href="/">Təhsil sistemi</a>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Student") ? "active" : "")">
                    <a class="nav-link" href="/Student/Index">Şagirdlər</a>
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Lesson") ? "active" : "")">
                    <a class="nav-link" href="/Lesson/Index">Dərslər</a>
                </li>
                <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Exam") ? "active" : "")">
                    <a class="nav-link" href="/Exam/Index">İmtahanlar</a>
                </li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="container-fluid" style="margin-left: 250px;">
            <div class="container mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
