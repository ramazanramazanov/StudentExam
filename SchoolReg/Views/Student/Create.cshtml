@model SchoolReg.Models.ViewModel.StudentViewModel
@{
    var isCreateMode = Model.StudentId == 0;
    ViewData["Title"] = isCreateMode ? "Şagirdin elave olunmasi" : "Şagird - " +Model.Name + Model.Surname;
}

<h1>@ViewData["Title"]</h1>
<!-- Create form to add a new student -->
<form asp-action="@(isCreateMode ? "Create" : "Save")"  method="post">
    <input asp-for="StudentId" type="text" class="form-control" id="StudentId" name="StudentId" value="@Model.StudentId" style="display:none" />
    <div class="form-group" style="width: 250px;">
        <label for="Name">Ad</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" maxlength="25" required  />
    </div>
    <div class="form-group" style="width: 250px;">
        <label for="Surname">Soyad</label>
        <input asp-for="Surname" type="text" class="form-control" id="Surname" name="Surname" maxlength="25" required  />
    </div>

    <div class="form-group" style="width: 250px;">
        <label for="Grade">Sinif</label>

        <select asp-for="Grade" class="form-control" asp-items="Model.Grades" maxlength="25" required>
            <option value="">Sinif secin</option>
        </select>
    </div>

    
    <button type="submit" class="btn btn-primary mt-3">Yadda saxla</button>
    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary  mt-3">Siyahıya bax</a>

</form>