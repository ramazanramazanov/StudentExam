@model SchoolReg.Models.ViewModel.LessonViewModel
@{
    var isCreateMode = Model.LessonId == 0;
    ViewData["Title"] = isCreateMode ? "Dərsin elave olunmasi" : "Dərs - " + Model.LessonId + Model.Name;
}
<h1>@ViewData["Title"]</h1>

<form asp-action="@(isCreateMode ? "Create" : "Save")"  method="post">
    <input asp-for="LessonId" type="text" class="form-control" id="LessonId" name="LessonId" value="@Model.LessonId" style="display:none" />
    <div class="form-group" style="width: 250px;">
        <label for="Name">Dərsin adi</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" maxlength="25" required  />
    </div>
    
    <div class="form-group" style="width: 250px;">
        <label for="Grade">Sinif</label>

        <select asp-for="Grade" class="form-control" asp-items="Model.Grades" maxlength="25" required>
            <option value="">Sinif secin</option>
        </select>
    </div>
    <div class="form-group" style="width: 250px;">
        <label for="Teachername">Müəllimin adı</label>
        <input asp-for="Teachername" type="text" class="form-control" id="Teachername" name="Teachername" maxlength="25" required />
    </div>
    <div class="form-group" style="width: 250px;">
        <label for="Surname">Müəllimin soyadı</label>
        <input asp-for="Teachersurname" type="text" class="form-control" id="Teachersurname" name="Teachersurname" maxlength="25" required />
    </div>

    
    <button type="submit" class="btn btn-primary mt-3">Yadda saxla</button>
    <a href="@Url.Action("Index", "Lesson")" class="btn btn-secondary  mt-3">Siyahıya bax</a>
</form>